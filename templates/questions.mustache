<style>
    .bdi-form-control {
        display: block;
        width: 100%;
        padding: .375rem .75rem;
        font-size: .9375rem;
        font-weight: 400;
        line-height: 1.5;
        appearance: none;
        border: var(--bs-border-width) solid var(--bs-gray-500);
        border-radius: 10px;
        z-index: auto;
    }

    .bdi-form-select {
        --bs-form-select-bg-img: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
        display: block;
        width: 50%;
        padding: .375rem 2.25rem .375rem .75rem;
        font-size: .9375rem;
        font-weight: 400;
        line-height: 1.5;
        color: var(--bs-body-color);
        appearance: none;
        background-color: var(--bs-body-bg);
        background-image: var(--bs-form-select-bg-img),var(--bs-form-select-bg-icon,none);
        background-repeat: no-repeat;
        background-position: right .75rem center;
        background-size: 16px 12px;
        border: var(--bs-border-width) solid var(--bs-gray-500);
        border-radius: var(--bs-border-radius);
        transition: border-color 0.15s ease-in-out,box-shadow 0.15s ease-in-out;
        z-index: auto;
    }
</style>
<div class="row">
    <div class="col">
        <div class="alert alert-info">
            {{#str}}question_instructions, block_design_ideas{{/str}}
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <form>
            <div class="mb-3">
                <label for="block-design-ideas-content">{{#str}}content, block_design_ideas{{/str}}</label>
                <textarea id="block-design-ideas-content" name="content" class="bdi-form-control" rows="5">{{{content}}}
                </textarea>
            </div>
            <div class="mb-3">
                <label for="block-design-ideas-question-type">{{#str}}question_type, block_design_ideas{{/str}}</label>
                <select id="block-design-ideas-question-type" name="question_type" class="bdi-form-select">
                    {{#question_types}}
                        <option value="{{value}}">{{{name}}}</option>
                    {{/question_types}}
                </select>
            </div>
            <div class="mb-3">
                <button id="block-design-ideas-btn-generate"
                        type="button"
                        class="btn btn-outline-primary"
                        data-course_id="{{courseid}}">
                    {{#str}}generate, block_design_ideas{{/str}}
                </button>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col">
        <div id="block-design-ideas-generated-questions"></div>
    </div>
</div>